<% if current_user.signed_user? %>
  <%= link_to 'All articles', articles_path, class: 'btn btn-primary'%>
<% end %>
<h3> published arrticles </h3>
<div class="row">
  <% @articles.each do |article| %>
    <div class="card m-3 mx-2" style="width: 18rem;">
      <img src="/assets/news.png" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"><%= article.description %></p>
        <p class="card-text"><%= article.status %></p>
        <%= link_to 'show', article_path(article), class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
