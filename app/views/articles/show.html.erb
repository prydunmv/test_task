<h4>show article</h4>
<div class="card mb-3">
  <% if @article.avatar.present? %>
    <%= image_tag(@article.avatar, class: 'img-thumbnail') %>
  <% else %>
    <img class="card-img-top" src="/assets/news.png" alt="Card image cap">
  <% end %>
  <h5 class="card-title"><%= @article.title %></h5>
  <p class="card-text"><%= @article.description %></p>
  <p class="card-text"><%= @article.body  %></p>
  <p class="card-text text-center">
    <% if current_user.admin? %>
      <%= link_to 'edit', edit_article_path %>
      <%= link_to 'destroy', article_path, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
    </p>
</div>
